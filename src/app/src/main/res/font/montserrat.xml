<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Normal (Regular) -->
    <font
        android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/montserrat_regular"
        app:fontStyle="normal"
        app:fontWeight="400"
        app:font="@font/montserrat_regular"/>

    <!-- Light -->
    <font
        android:fontStyle="normal"
        android:fontWeight="300"
        android:font="@font/montserrat_light"
        app:fontStyle="normal"
        app:fontWeight="300"
        app:font="@font/montserrat_light"/>
        
    <!-- Medium -->
    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/montserrat_medium"
        app:fontStyle="normal"
        app:fontWeight="500"
        app:font="@font/montserrat_medium"/>

    <!-- SemiBold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/montserrat_semibold"
        app:fontStyle="normal"
        app:fontWeight="600"
        app:font="@font/montserrat_semibold"/>
        
    <!-- Bold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/montserrat_bold"
        app:fontStyle="normal"
        app:fontWeight="700"
        app:font="@font/montserrat_bold"/>

</font-family>