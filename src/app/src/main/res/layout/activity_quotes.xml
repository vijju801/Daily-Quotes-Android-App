<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".QuotesActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_quotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_quotes"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/quotes_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            tools:text="Category Title" />

        <TextView
            android:id="@+id/quote_text_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:lineSpacingMultiplier="1.3"
            tools:text="This is where the inspiring quote will be displayed. It will be clean, clear, and focused." />

        <LinearLayout
            android:id="@+id/action_buttons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/copy_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_copy"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Copy Quote"
                app:tint="?attr/colorOnSurfaceVariant"
                android:padding="10dp"
                android:layout_marginEnd="20dp"/>

            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_share"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Share Quote"
                app:tint="?attr/colorOnSurfaceVariant"
                android:padding="10dp"
                android:layout_marginEnd="20dp"/>

            <ImageButton
                android:id="@+id/favorite_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_futuristic_star_outline"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Favorite"
                app:tint="?attr/colorOnSurfaceVariant"
                android:padding="10dp"/>

            <ImageButton
                android:id="@+id/explain_button_quotes"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_help"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Explain Quote"
                app:tint="?attr/colorOnSurfaceVariant"
                android:padding="10dp"
                android:layout_marginStart="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/prev_next_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/prev_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="&lt; Previous"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next &gt;"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>