<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Using a theme attribute for background color for better adaptability -->
    <solid android:color="?attr/colorSurfaceContainerHigh" />
    <corners android:radius="12dp" />
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
    <!-- Optional: using a theme attribute for border color -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorPrimary" />
</shape>